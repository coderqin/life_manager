<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="09:32"
        android:id="@+id/first_receive_time" />

    <RelativeLayout
        android:layout_marginTop="3dp"
        android:layout_below="@id/first_receive_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:id="@+id/sender_photo"
            android:src="@drawable/chatother" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/outgoing"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/sender_photo">

            <TextView
                android:textColor="#ffff111a"
                android:gravity="center_vertical"
                android:id="@+id/send_content"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="行，下午学校门口见面" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>